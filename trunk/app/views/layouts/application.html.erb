<!DOCTYPE html>
<html>
<head>
  <title>TheTask</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

  <div id="top_menu">      
    <%= link_to t(:logout), destroy_user_session_path, :method => :delete %>
  </div>

  <div id="main_menu">
    <ul>
      <li id="main_menu_el"> <%= link_to t(:home), '/' %> </li>
      <li id="main_menu_el"> <%= link_to t(:games), games_path %>  </li>
      <li id="main_menu_el"> <%= link_to t(:plays), plays_path %>  </li>
      <li id="main_menu_el"> <%= link_to t(:me), user_path(current_user) if current_user %>  </li>
    </ul>
  </div>

  <div id="content"><%= content_for?(:content) ? yield(:content) : yield %></div>

</body>
</html>
