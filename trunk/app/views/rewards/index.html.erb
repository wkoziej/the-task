<h1>Listing rewards</h1>

<table>
  <tr>
    <th>Priceinpoints</th>
    <th>Userlimit</th>
    <th>Expirationdate</th>
    <th>Description</th>
    <th>Sponsor</th>
    <th>Creator</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rewards.each do |reward| %>
  <tr>
    <td><%= reward.priceInPoints %></td>
    <td><%= reward.userLimit %></td>
    <td><%= reward.expirationDate %></td>
    <td><%= reward.description %></td>
    <td><%= reward.sponsor %></td>
    <td><%= reward.creator %></td>
    <td><%= link_to 'Show', reward %></td>
    <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
    <td><%= link_to 'Destroy', reward, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

