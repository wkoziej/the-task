<h1>Listing games</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Creator</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
 </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.description %></td>
    <td><%= game.status %></td>
    <td><%= game.creator.login %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game)  if game.new? %></td>
    <td><%= link_to 'Delete', game, :confirm => 'Are you sure?',  :method => :delete if game.new? %></td>
    <td><%= link_to 'Archive', game_path(game, :game => { :status => :archived } ), :confirm => 'Want archive?', :method => :put if game.active?  %></td>
    <td><%= link_to 'Activate', game_path(game, :game => { :status => :active } ), :confirm => 'Activate?', :method => :put if game.new?  %></td>
    <td> <%= link_to 'Play', plays_path(:play => {:player_id => current_user, :game_id => game.id}), :confirm => 'Play?', :method => :post if game.active? %> </td>
  </tr>
<% end %>
</table>

